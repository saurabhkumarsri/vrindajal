<div class="max-w-screen-xl mx-auto flex flex-col md:flex-row items-center px-6 py-12">

  <div class="w-full max-w-md p-8 space-y-6 bg-white shadow-lg rounded-2xl">
    <h2 class="text-2xl font-bold text-center text-gray-700">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 mt-1 border rounded-md focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-2 mt-1 border rounded-md focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "mr-2 rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
          <%= f.label :remember_me, class: "text-sm text-gray-600" %>
        </div>
      <% end %>

      <div>
        <%= f.submit "Log in", class: "w-full px-4 py-2 text-white bg-blue-600 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
      </div>
    <% end %>
  </div>
  <div class="md:w-1/2 mt-6 md:mt-0 text-center">
          <img src="<%= image_path 'waterboy.png' %>" alt="Illustration" class="w-60 md:w-80 mx-auto">
  </div>

</div>


<%#= render "devise/shared/links" %>
